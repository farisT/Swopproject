html
	head
		link(href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css", rel="stylesheet", integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u", crossorigin="anonymous")
		link(rel="stylesheet" type="text/css" href="customSwop.css")
		meta(name="viewport" content="width=device-width, initial-scale=1")
		meta(charset="utf-8")
			
	body(id="profilePage")
		include nav

		div(class="container")
			div(class="row")
				div(class="col-sm-12")
					div(class="row greyspace")
						div(class="col-sm-2 col-sm-offset-1 ")
							img#Profilepic(src="/images/navbar/profileIcon.png")
						div(class="col-sm-3")
							br
							br
							h3(class="profiletext") #{first_name } #{last_name}
							p(class="profiletext") #{email} #[br] #{address} #[br] #{zipcode } #{city} #[br] #{phone_number} #[br] #{date_of_birth}
						div(class="col-sm-5" id="divProfile")
							ul.nav.nav-tabs(id="profiletabs")
								li.active
									a(href='#') My Products

								li
									a(href='#') Borrowed (n/a yet)
								li
									a(href='#') Favourites (n/a yet)

				div(class="row")
				br
				br
				div(class="col-sm-1 col-sm-offset-1")
					form(method="GET" action="/uploadpageRoute")
						input(class="submitelement" id="" type="submit" value="Upload item >")
					br
				div(class="row")
					div(class="col-sm-10 col-sm-offset-1")
						table.table(id="profiletable")
							thead
								tr
									th Date Added
									th Item
									th Category
									th Size
									th Gender
									th Brand
									th State
									th Borrow time

				div(class="row")
					div(class="col-sm-10 col-sm-offset-1")
						div(class="row")
							each item in clothes 
								div(class="col-sm-2")
									p #{item.dataValues.created_at}
								div(class="col-sm-4")
									img(src="images/uploaditem/"+item.dataValues.itemimage)
								div(class="col-sm-1")
									p #{item.dataValues.category}
								div(class="col-sm-1")
									p #{item.dataValues.size}
								div(class="col-sm-1")
									p #{item.dataValues.gender}
								div(class="col-sm-1")
									p #{item.dataValues.brand}
								div(class="col-sm-1")
									p #{item.dataValues.condition}
								div(class="col-sm-1")
									p #{item.dataValues.borrow_time}





		.spacer200


		include footer	
	script(src="https://code.jquery.com/jquery-3.2.1.min.js" integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4=" crossorigin="anonymous")
	script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js", integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa", crossorigin="anonymous")
